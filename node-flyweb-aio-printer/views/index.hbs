<div class="tab-content">
  <div id="printer" class="tab-pane fade active in">
    <h3>Supply Levels</h3>

    <div id="supply-levels"></div>

    <h3>Send To Printer</h3>

    <span class="btn btn-primary fileinput-button">
      Select File
      <i class="material-icons">folder_open</i>
      <input type="file" id="print-file" name="file">
    </span>

    <div id="upload-progress" class="progress progress-striped active fade">
      <div class="progress-bar"></div>
    </div>

    <!-- Print modal -->
    <div id="print-modal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Print</h4>
          </div>
          <div class="modal-body">
            <form class="form-horizonal" id="print-form">
              <fieldset>
                <div class="form-group">
                  <label for="print-copies" class="col-xs-2 control-label">Copies</label>
                  <div class="col-xs-10">
                    <input type="number" id="print-copies" class="form-control" name="_copies" value="1" min="1">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-xs-2 control-label">Color</label>
                  <div class="col-xs-10">
                    <div class="radio radio-primary">
                      <label>
                        <input type="radio" name="ColorModel" value="KGray">
                        Black &amp; White
                      </label>
                    </div>
                    <div class="radio radio-primary">
                      <label>
                        <input type="radio" name="ColorModel" value="RGB" checked>
                        Color
                      </label>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label for="print-quality" class="col-xs-2 control-label">Quality</label>
                  <div class="col-xs-10">
                    <select id="print-quality" class="form-control" name="OutputMode">
                      <option value="FastDraft">Draft</option>
                      <option value="Normal" selected>Normal</option>
                      <option value="Best">Best</option>
                      <option value="Photo">Photo</option>
                    </select>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" id="print-cancel-button" class="btn" data-dismiss="modal">Cancel</button>
            <button type="button" id="print-print-button" class="btn btn-primary" data-dismiss="modal">Print</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="scanner" class="tab-pane fade">
    <h3>Scanner Preview</h3>

    <canvas id="preview-canvas"></canvas>

    <button type="button" id="preview-button" class="btn btn-primary" data-toggle="modal" data-target="#preview-modal">Preview</button>
    <button type="button" id="scan-button" class="btn btn-primary" data-toggle="modal" data-target="#scan-modal">Scan</button>

    <!-- Preview modal -->
    <div id="preview-modal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Previewing</h4>
          </div>
          <div class="modal-body">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 66 66" class="md-spinner">
              <circle cx="33" cy="33" r="30"></circle>
            </svg>
          </div>
          <div class="modal-footer">
            <button type="button" id="preview-cancel-button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Scan modal -->
    <div id="scan-modal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Scanning</h4>
          </div>
          <div class="modal-body">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 66 66" class="md-spinner">
              <circle cx="33" cy="33" r="30"></circle>
            </svg>
          </div>
          <div class="modal-footer">
            <button type="button" id="scan-cancel-button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
